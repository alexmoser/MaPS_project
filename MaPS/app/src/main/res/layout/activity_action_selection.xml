<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maps.unipi.maps.ActionSelection">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter"
        android:id="@+id/selection_b_filter"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/selection_b_newPurch"
        android:onClick="onClickFilters" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favourite_itmes"
        android:id="@+id/selection_b_favItems"
        android:layout_alignTop="@+id/selection_b_filter"
        android:layout_alignParentEnd="true"
        android:onClick="onClickFavouriteItems" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_purchase"
        android:id="@+id/selection_b_lastPurch"
        android:layout_below="@+id/selection_b_filter"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"
        android:onClick="onClickLastPurchase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopping_cart"
        android:id="@+id/selection_b_shopCart"
        android:layout_alignTop="@+id/selection_b_lastPurch"
        android:layout_alignStart="@+id/selection_b_favItems"
        android:onClick="onClickShoppingCart" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start new purchase"
        android:id="@+id/selection_b_newPurch"
        android:layout_below="@+id/selection_b_lastPurch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:onClick="onClickNewPurchase" />
</RelativeLayout>
