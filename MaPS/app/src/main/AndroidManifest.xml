<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maps.unipi.maps">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registration"
            android:label="@string/registration_name" />
        <activity
            android:name=".ActionSelection"
            android:label="@string/action_name" />
        <activity
            android:name=".Filters"
            android:label="@string/filters_name" />
        <activity
            android:name=".NewPurchase"
            android:label="@string/purchase_name" />
        <activity
            android:name=".LastPurchase"
            android:label="@string/lastpurch_name" />
        <activity
            android:name=".ScanProduct"
            android:label="Products Scan"/>
        <activity
            android:name=".ProductInformation"
            android:label="Product Information"/>
        <activity
            android:name=".CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
    </application>

</manifest>